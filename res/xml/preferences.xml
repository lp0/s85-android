<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<EditTextPreference
		android:inputType="textPassword"
		android:key="token"
		android:summary="@string/pref_token_summary"
		android:title="@string/pref_token_title"/>

	<ListPreference
		android:defaultValue="63072000"
		android:entries="@array/pref_expires_names"
		android:entryValues="@array/pref_expires_values"
		android:key="expires"
		android:summary="@string/pref_expires_summary"
		android:title="@string/pref_expires_title"/>
</PreferenceScreen>